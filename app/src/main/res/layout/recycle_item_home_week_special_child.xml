<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write">

    <ImageView
        android:id="@+id/iv_week_special_product"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_125"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_home_week_special_shadow"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_week_special_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/iv_week_special_product"
        app:layout_constraintRight_toRightOf="@+id/iv_week_special_product"
        app:layout_constraintTop_toBottomOf="@+id/iv_week_special_product" />

    <TextView
        android:id="@+id/tv_week_special_product_name_en"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:singleLine="true"
        android:textColor="@color/home_week_special_product_name_en_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/iv_week_special_product"
        app:layout_constraintRight_toRightOf="@+id/iv_week_special_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_special_product_name" />

    <ImageView
        android:id="@+id/iv_home_weekly_special_item_child_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/ic_home_weekly_special_item_child_cart"
        app:layout_constraintRight_toRightOf="@+id/tv_week_special_product_name_en"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_special_product_name_en" />


    <TextView
        android:id="@+id/tv_week_special_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home_weekly_special_item_child_cart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_home_weekly_special_item_child_cart" />

</androidx.constraintlayout.widget.ConstraintLayout>